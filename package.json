{
  "name": "sakti-code",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@10.28.0",
  "scripts": {
    "dev": "tsx scripts/watch.ts",
    "dev:p": "turbo run dev --parallel",
    "fixtures:extract-real": "tsx scripts/extract-real-stream-fixtures.ts",
    "models:refresh:snapshot": "pnpm --filter @sakti-code/server models:refresh:snapshot",
    "migrations:check:server": "pnpm --filter @sakti-code/server drizzle:check && node scripts/check-server-migration-policy.mjs",
    "build": "turbo run build",
    "test": "pnpm -r --if-present test",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "typecheck:test": "turbo run typecheck:test",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@libsql/client": "^0.17.0",
    "@mastra/core": "^1.0.4",
    "@mastra/libsql": "^1.0.0",
    "@mastra/memory": "^1.0.0",
    "@types/node": "^22.19.1",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^4.0.18",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.31.9",
    "drizzle-orm": "^0.45.1",
    "electron": "catalog:",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^9.1.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.8.1",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tsx": "^4.19.2",
    "turbo": "^2.8.0",
    "typescript": "catalog:",
    "uuid": "^13.0.0",
    "vite": "catalog:",
    "vite-plugin-dts": "catalog:",
    "vitest": "catalog:"
  },
  "dependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.6.2"
  }
}

{
  "name": "@ekacode/desktop",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev -- --ozone-platform=wayland --enable-features=UseOzonePlatform --force-device-scale-factor=1 --disable-fractional-rp-pixelation",
    "build": "npm run typecheck && electron-vite build",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit -p tsconfig.node.json && tsc --noEmit -p tsconfig.web.json",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json"
  },
  "dependencies": {
    "@ekacode/core": "workspace:*",
    "@ekacode/server": "workspace:*",
    "@ekacode/shared": "workspace:*",
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@mastra/fastembed": "^1.0.0",
    "pino": "^9.14.0",
    "pino-pretty": "^11.3.0",
    "ts-morph": "^25.0.1"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^22.19.1",
    "electron": "^39.2.6",
    "electron-vite": "^5.0.0",
    "solid-js": "^1.9.10",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.2.6",
    "vite-plugin-solid": "^2.11.10"
  }
}

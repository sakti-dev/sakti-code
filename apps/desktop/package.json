{
  "name": "@sakti-code/desktop",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "test": "vitest",
    "test:run": "vitest run",
    "test:layout": "bash ./scripts/check-no-tests-unit.sh",
    "test:perf": "PERF_BENCH=1 vitest run tests/integration/markdown-stream-stress.test.tsx tests/integration/markdown-benchmark.report.test.tsx",
    "test:health": "bash ./scripts/test-health.sh",
    "test:unit": "vitest run --project desktop-unit-node",
    "test:ui": "vitest run --project desktop-ui-jsdom",
    "test:integration": "vitest run --project desktop-contract",
    "typecheck:test": "tsc -p tsconfig.spec.json --noEmit",
    "test:all": "pnpm run typecheck:test && vitest run",
    "typecheck": "pnpm --filter @sakti-code/shared build && tsc --noEmit",
    "lint": "eslint .",
    "markdown:migration:baseline": "bash ./scripts/markdown-migration-baseline.sh",
    "markdown:migration:health": "bash ./scripts/markdown-migration-health.sh"
  },
  "dependencies": {
    "@corvu/resizable": "^0.2.5",
    "@incremark/solid": "latest",
    "@incremark/theme": "latest",
    "@kobalte/core": "^0.13.11",
    "@sakti-code/electron-preload": "workspace:*",
    "@sakti-code/shared": "workspace:*",
    "@solid-primitives/event-bus": "^1.1.2",
    "@solid-primitives/presence": "^0.1.2",
    "@solid-primitives/resource": "^0.4.3",
    "@solid-primitives/virtual": "^0.2.2",
    "@solidjs/router": "^0.15.1",
    "ai": "^6.0.58",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.19",
    "lucide-solid": "^0.575.0",
    "@sakti-code/memorable-name": "workspace:*",
    "minisearch": "^7.2.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@hono/node-server": "^1.19.6",
    "@sakti-code/server": "workspace:*",
    "@solidjs/testing-library": "^0.8.10",
    "@tailwindcss/vite": "catalog:",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.19.1",
    "@vitest/ui": "^4.0.18",
    "electron": "catalog:",
    "hono": "^4.10.5",
    "solid-js": "^1.9.11",
    "tailwindcss": "catalog:",
    "tw-animate-css": "^1.4.0",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vite-plugin-solid": "catalog:",
    "vitest": "catalog:"
  }
}

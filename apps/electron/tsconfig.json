{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "/@/*": ["src/*"]
    },
    "allowImportingTsExtensions": true,
    "moduleResolution": "bundler",
    "module": "ESNext",
    "noEmit": true
  },
  "include": ["src/**/*.ts", "vite.config.ts"]
}
